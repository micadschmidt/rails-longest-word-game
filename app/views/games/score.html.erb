<div class="container">
  <h1>Result</h1>
  <% if @user_grid %>
    <% if @dictonary %>
      <p>"Congratulations <%= @answer %> is a valid English word"</p>
    <% else %>
      <p>"Sorry but <%= @answer %> does not seem to be a valid English word"</p>
    <% end %>
  <% else %>
    <p>"Sorry but <%= @answer %> cant be built out of <%= @letters %>"
  <% end %>
  <%= link_to "Play another time", new_path %>
</div>
